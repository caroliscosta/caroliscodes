public class Livro {

String genero;
String autor;
String titulo;
int codigo;
boolean disponivel;

}

public Livro (String genero, String autor, String titulo, int codigo, boolean disponivel){
this.genero = genero;
this.autor = autor;
this.titulo = titulo;
this.codigo = codigo;
this.disponivel = disponivel;

}

public class Biblioteca {

